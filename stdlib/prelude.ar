// (T2 => T1+) reverse((T1 => T2) map) = merge_values({(v => k) : v @ k <- map});

[T2 -> T1] reverse([T1 -> T2] map) = merge([[v -> k] : k, v <- map]);

[] reverse_relation([] map) = [];
[+T2 -> [+T1]] reverse_relation([+T1 -> T2] map) = nonempty_map(merge_values([[v -> k] : k, v <- map]));

[T2 -> [+T1]] reverse_multi([T1 -> [T2]] map) = merge_values([[v -> k : v <- vs] : k, vs <- map]);





