T* array_map([Nat -> T] map) = if map == [] then () else (map[i] : i <= max(nonempty(keys(map))));

## WOULD NEED SUBSIGNATURES HERE: [Nat] -> [Nat], [Int] -> [Int], [Float -> Float]
## AND THE TYPE OF THE ELEMENTS SHOULD BE PARAMETRIC
Nat* partial_sums(Nat* xs) {
  sum = 0;
  sums = ();
  for x <- xs:
    sum = nat(sum + x);
    sums = (sums | sum);
  ;
  return sums;
}

