T fold(T+ seq, (T T -> T) f) = foldl(seq, f);


T foldl(T+ seq, (T T -> T) f) {
  res = seq(0);
  for i = 1..|seq|:
    res = f(res, seq(i));
  ;
  return res;
}


T foldr(T+ seq, (T T -> T) f) {
  rev_seq = reverse(seq);
  res = rev_seq(0);
  for i = 1..|seq|:
    res = f(rev_seq(i), res);
  ;
  return res;
}