String (_*_) (Nat len, String str)    = string(len * chars(str));

Bool (_<_)(String str1, String str2) = {
  len1 = length(str1);
  len2 = length(str2);

  min_len = min(len1, len2);

  chs1 = chars(str1);
  chs2 = chars(str2);

  i = 0;
  while i < min_len:
    ch1 = chs1(i);
    ch2 = chs2(i);

    return true if ch1 < ch2;
    return false if ch1 > ch2;

    i = i + 1;
  ;

  return len1 < len2;
};

