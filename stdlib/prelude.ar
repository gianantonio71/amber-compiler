Int to_int(String str) = to_int(chars(str));

Int to_int(Nat* digits) {
  assert |digits| > 0;

  res = 0;
  neg = false;

  for ch @ i <- digits:
    if ch == ascii_minus and i == 0:
      neg = true;
      assert |digits| > 1;
    else
      code = ch - ascii_0;
      assert code >= 0 and code <= 9;
      res = 10 * res + code;
    ;
  ;

  return if neg then -res else res;
}

