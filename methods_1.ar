NzNat syn_case_arity(SynCase c) = length(c.patterns);

Nat arity(SynFnDef d) = length(d.params);

Nat arity(SynFnArg arg) =
  if arg.type?
    then
      match (arg.type)
        cls_type()  = length(arg.type.in_types),
        _           = 0;
    else 0;

Nat arity(SynProcDef p) = length(p.params);
